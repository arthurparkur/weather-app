<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/city_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="50dp"
		android:textSize="30sp" />

	<ImageView
		android:id="@+id/today_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />

	<TextView
		android:id="@+id/today_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="15dp"
		android:ellipsize="marquee"
		android:maxLength="22"
		android:singleLine="true"
		android:textSize="24sp" />

	<GridLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="15dp"
		android:columnCount="2"
		android:orientation="horizontal">

		<TextView
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/temperature_text" />

		<TextView
			android:id="@+id/today_temperature"
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp" />

		<TextView
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/pressure_text" />

		<TextView
			android:id="@+id/today_pressure"
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp" />

		<TextView
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/humidity_text" />

		<TextView
			android:id="@+id/today_humidity"
			style="@style/today_grid_item"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp" />

	</GridLayout>

</LinearLayout>